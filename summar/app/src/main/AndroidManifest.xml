<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.summar">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="SUMMAR"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".login" />

        <activity android:name=".follow_item" />
        <activity android:name=".following" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home" />
        <activity android:name=".Register" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Web_url" />
        <activity android:name=".Article" />
        <activity android:name=".classification" />
        <activity
            android:name=".settingg"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".personal" />
        <activity android:name=".Search" />
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />
        <service android:name=".FloatingWindow" />
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>
    <uses-permission
        android:name="android.permission.INTERNAL_SYSTEM_WINDOW"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>